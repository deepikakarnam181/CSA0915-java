import java.util.*;
class tri
{
    public static void main(String args[])
    {
        int i,j,rows;
        Scanner sc=new Scanner(System.in);
        System.out.println("enter");
        rows=sc.nextInt();
        for(i=1;i<=rows;i++)
        {
            for(j=1;j<=i;j++)
            {
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
