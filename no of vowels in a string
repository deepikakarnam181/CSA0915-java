import java.io.*;
class b 
{
    public static void main(String args[]) 
    {
        String s="deepika";
        int l=s.length();
        char a[]=new char[l];
        int v=0;
        for(int i=0;i<l;i++)
        {
            a[i]=s.charAt(i);
            if(a[i]=='a'||a[i]=='e'||a[i]=='i'||a[i]=='o'||a[i]=='u'||a[i]=='A'||a[i]=='E'||a[i]=='I'||a[i]=='O'||a[i]=='U')
            v++;
        }
        System.out.println(v);
    }
}
